<h1>New Place</h1>

<form action="/places" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="mb-3">
    <label for="name_input" class="form-label">Place Name</label>
    <input type="text" name="place[name]" id="name_input" class="form-control">
  </div>

  <button class="btn btn-primary">Create Place</button>
</form>